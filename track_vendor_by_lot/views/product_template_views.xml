<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_track_vendor" model="ir.ui.view">
        <field name="name">product.template.form.inherit.track.vendor</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_template_property_form" />
        <field name="arch" type="xml">
            <field name="tracking" position="after">
                <field name="track_vendor_by_lot"
                       invisible="tracking not in ['lot', 'serial']"
                       class="oe_inline"/>
            </field>
        </field>
    </record>
</odoo>
