<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_batch_send_zalo_wizard_form" model="ir.ui.view">
            <field name="name">zalo.batch.send.wizard.form</field>
            <field name="model">zalo.batch.send.wizard</field>
            <field name="arch" type="xml">
                <form string="Batch Send Zalo Messages">
                    <group>
                        <field name="template_id"/>
                        <field name="model" invisible="1"/>
                        <field name="record_ids" invisible="1"/>
                    </group>
                    <footer>
                        <button name="action_send_batch_messages" string="Send" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>