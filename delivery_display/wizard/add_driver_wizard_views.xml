<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Driver Wizard Form -->
    <record id="view_add_driver_wizard_form" model="ir.ui.view">
        <field name="name">delivery.display.add.driver.wizard.form</field>
        <field name="model">delivery.display.add.driver.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Drivers">
                <sheet>
                    <group>
                        <field name="employee_ids" widget="many2many_tags" options="{'no_create': True}">
                            <tree>
                                <field name="name"/>
                                <field name="job_id"/>
                                <field name="mobile_phone"/>
                                <field name="barcode"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button string="Add as Drivers" type="object" name="action_add_drivers" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Add Driver Wizard Action -->
    <record id="action_add_driver_wizard" model="ir.actions.act_window">
        <field name="name">Add Drivers</field>
        <field name="res_model">delivery.display.add.driver.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
