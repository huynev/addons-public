<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Enhanced HR Employee Views -->
        <record id="view_hr_employee_form_enhanced" model="ir.ui.view">
            <field name="name">hr.employee.form.enhanced</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Attendance Device" name="attendance_device">
                        <group>
                            <group>
                                <field name="attendance_device_id"/>
                            </group>
                            <group>
                                <field name="total_attendances"/>
                                <field name="this_month_attendances"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>