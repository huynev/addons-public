<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_send_zalo_message_wizard_form" model="ir.ui.view">
            <field name="name">zalo.send.message.wizard.form</field>
            <field name="model">zalo.send.message.wizard</field>
            <field name="arch" type="xml">
                <form string="Send Zalo Message">
                    <group>
                        <field name="template_id"/>
                    </group>
                    <footer>
                        <button name="action_send_message" string="Send" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>