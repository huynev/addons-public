<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action for Delivery Display -->
    <record id="action_delivery_display" model="ir.actions.client">
        <field name="name">Delivery Display</field>
        <field name="tag">delivery_display</field>
        <field name="target">fullscreen</field>
        <field name="context">{
            'show_confirmed_only': False,
            'show_assigned_only': False,
        }</field>
    </record>

    <!-- Menu item -->
    <menuitem
        id="menu_delivery_display"
        name="Delivery Display"
        parent="stock.menu_stock_root"
        action="action_delivery_display"
        sequence="10"/>

    <!-- Extended form view for stock.picking -->
    <record id="view_picking_form_delivery_display" model="ir.ui.view">
        <field name="name">stock.picking.form.delivery.display</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="driver_id" invisible="picking_type_code != 'outgoing'"/>
            </xpath>
        </field>
    </record>

</odoo>
