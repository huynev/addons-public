<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_hr_payroll_report_form" model="ir.ui.view">
        <field name="name">hr.payroll.report.form</field>
        <field name="model">hr.payroll.report.minhduc</field>
        <field name="arch" type="xml">
            <form string="Payroll Report">
                <header>
                    <button name="action_generate_report" string="Generate Report" type="object" class="oe_highlight" invisible="state == 'generated'"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" invisible="state == 'draft'"/>
                    <button name="action_download_report" string="Download Report" type="object" class="oe_highlight" invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generated"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Report Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="report_type"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="pdf_filename" invisible="1"/>
                            <field name="pdf_report" filename="pdf_filename" widget="binary" invisible="state == 'draft'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Selection Criteria">
                            <group>
                                <field name="employee_ids" widget="many2many_tags"/>
                                <field name="department_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                        <page string="Payslips" invisible="state == 'draft'">
                            <field name="payslip_ids">
                                <tree>
                                    <field name="employee_id"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="number"/>
                                    <field name="state"/>
                                    <field name="company_id" groups="base.group_multi_company"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_hr_payroll_report_tree" model="ir.ui.view">
        <field name="name">hr.payroll.report.tree</field>
        <field name="model">hr.payroll.report.minhduc</field>
        <field name="arch" type="xml">
            <tree string="Payroll Reports" decoration-info="state=='draft'" decoration-success="state=='generated'">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="report_type"/>
                <field name="state"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_hr_payroll_report_search" model="ir.ui.view">
        <field name="name">hr.payroll.report.search</field>
        <field name="model">hr.payroll.report.minhduc</field>
        <field name="arch" type="xml">
            <search string="Search Payroll Reports">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <filter string="Draft" name="state_draft" domain="[('state','=','draft')]"/>
                <filter string="Generated" name="state_generated" domain="[('state','=','generated')]"/>
                <filter string="This Month" name="this_month" domain="[('date_from','&gt;=',(context_today()).strftime('%Y-%m-01')),('date_to','&lt;=',context_today())]"/>
                <filter string="Last Month" name="last_month" domain="[('date_from','&gt;=',(context_today() + relativedelta(months=-1)).strftime('%Y-%m-01')),('date_to','&lt;',(context_today()).strftime('%Y-%m-01'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Report Type" name="group_by_type" context="{'group_by': 'report_type'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'state'}"/>
                    <filter string="Company" name="group_by_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_hr_payroll_report" model="ir.actions.act_window">
        <field name="name">Payroll Reports</field>
        <field name="res_model">hr.payroll.report.minhduc</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new payroll report
            </p>
        </field>
    </record>

    <menuitem id="menu_hr_payroll_report"
              name="Báo cáo bảng lương"
              parent="hr_bank_payroll_report.payroll_menu_report"
              action="action_hr_payroll_report"
              sequence="10"/>
</odoo>