<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="delivery_display.DeliveryControlPanelButtons">
    <div class="position-relative d-flex align-items-center mw-100 overflow-x-auto">
        <div class="d-flex gap-1">
            <t t-foreach="filterButtons" t-as="filter" t-key="filter[0]">
                <t t-set="id" t-value="filter[0]"/>
                <t t-set="name" t-value="filter[1].name"/>
                <t t-set="count" t-value="filter[1].count"/>
                <t t-set="type" t-value="filter[1].type"/>
                <button class="btn btn-light text-nowrap" 
                        t-att-class="this.props.activeFilter == id ? 'active' : ''"
                        t-on-click="() => this.props.selectFilter(id)">
                    <i t-if="type == 'warehouse'" class="fa fa-warehouse me-1"/>
                    <i t-if="type == 'route'" class="fa fa-route me-1"/>
                    <t t-esc="name"/>
                    <span class="overflow-hidden rounded ms-1 py-1 px-2" t-out="count"
                          t-attf-class="o_delivery_filter_color_{{type == 'warehouse' ? 'primary' : type == 'route' ? 'warning' : 'info'}}"/>
                </button>
            </t>
        </div>
    </div>
    </t>
</templates>
