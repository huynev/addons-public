<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_location_action_wizard_form" model="ir.ui.view">
        <field name="name">location.action.wizard.form</field>
        <field name="model">location.action.wizard</field>
        <field name="arch" type="xml">
            <form string="Thao tác trên vị trí kho">
                <sheet>
                    <group>
                        <group>
                            <field name="location_id" readonly="1"/>
                            <field name="action_type" widget="radio"/>
                        </group>
                        <group>
                            <field name="picking_type_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Chọn sản phẩm/Lot">
                            <group>
                                <field name="quant_ids" widget="many2many_tags" 
                                       domain="[('location_id', '=', location_id), ('quantity', '>', 0)]"
                                       options="{'no_create': True}">
                                    <tree>
                                        <field name="product_id"/>
                                        <field name="lot_id"/>
                                        <field name="quantity"/>
                                        <field name="reserved_quantity"/>
                                        <field name="available_quantity"/>
                                    </tree>
                                </field>
                            </group>
                            <separator string="Hoặc nhập thủ công"/>
                            <group>
                                <group>
                                    <field name="product_id" options="{'no_create': True}"/>
                                    <field name="lot_id" 
                                           domain="[('product_id', '=', product_id)]"
                                           options="{'no_create': True}"
                                           invisible="not product_id"/>
                                </group>
                                <group>
                                    <field name="quantity"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Vị trí đích" invisible="action_type == 'pick'">
                            <group>
                                <field name="dest_location_id" 
                                       options="{'no_create': True}"
                                       domain="[('usage', '=', 'internal')]"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Xác nhận" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Hủy" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
