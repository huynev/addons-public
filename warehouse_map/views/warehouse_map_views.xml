<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view cho warehouse map -->
    <record id="view_warehouse_map_form" model="ir.ui.view">
        <field name="name">warehouse.map.form</field>
        <field name="model">warehouse.map</field>
        <field name="arch" type="xml">
            <form string="Sơ đồ kho">
                <header>
                    <button name="%(action_warehouse_map_blocked_cell)d" 
                            string="Quản lý ô bị chặn" 
                            type="action"
                            class="oe_highlight"
                            icon="fa-ban"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_warehouse_map_blocked_cell)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-ban">
                            <field name="blocked_cell_count" widget="statinfo" string="Ô bị chặn"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tên sơ đồ kho..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="warehouse_id"/>
                            <field name="location_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="rows"/>
                            <field name="columns"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Phân vùng sơ đồ (Spacing)">
                        <field name="row_spacing_interval" 
                               string="Khoảng cách sau mỗi X hàng"
                               help="Thêm khoảng trống sau mỗi X hàng để phân vùng. VD: 5 = khoảng trống sau hàng 5, 10, 15..."/>
                        <field name="column_spacing_interval"
                               string="Khoảng cách sau mỗi X cột"
                               help="Thêm khoảng trống sau mỗi X cột để phân vùng. VD: 3 = khoảng trống sau cột 3, 6, 9..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view -->
    <record id="view_warehouse_map_tree" model="ir.ui.view">
        <field name="name">warehouse.map.tree</field>
        <field name="model">warehouse.map</field>
        <field name="arch" type="xml">
            <tree string="Sơ đồ kho">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="warehouse_id"/>
                <field name="location_id"/>
                <field name="rows"/>
                <field name="columns"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Custom view để hiển thị sơ đồ -->
    <record id="view_warehouse_map_kanban" model="ir.ui.view">
        <field name="name">warehouse.map.kanban</field>
        <field name="model">warehouse.map</field>
        <field name="arch" type="xml">
            <kanban class="o_warehouse_map_kanban" create="false">
                <field name="id"/>
                <field name="name"/>
                <field name="warehouse_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="warehouse_id"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <button class="btn btn-primary" type="object" name="action_view_map">
                                    Xem sơ đồ
                                </button>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_warehouse_map" model="ir.actions.act_window">
        <field name="name">Sơ đồ kho</field>
        <field name="res_model">warehouse.map</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo sơ đồ kho mới
            </p>
            <p>
                Sơ đồ kho giúp bạn quản lý và theo dõi vị trí lot/sản phẩm một cách trực quan.
            </p>
        </field>
    </record>

    <!-- Client Action cho map view -->
    <record id="action_warehouse_map_view" model="ir.actions.client">
        <field name="name">Xem sơ đồ kho</field>
        <field name="tag">warehouse_map_view</field>
    </record>

</odoo>
