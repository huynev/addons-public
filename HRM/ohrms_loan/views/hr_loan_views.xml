<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Tree View of hr_loan model-->
    <record id="hr_loan_view_tree" model="ir.ui.view">
        <field name="name">hr.loan.view.tree</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <tree string="Loan Requests">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="batch_id"/>
                <field name="loan_amount"/>
                <field name="date"/>
                <field name="state"/>
                <field name="total_paid_amount"/>
                <field name="balance_amount"/>
                <field name="is_auto_generated" invisible="1"/>
            </tree>
        </field>
    </record>

    <!--Form View of hr_loan model-->
    <record id="hr_loan_view_form" model="ir.ui.view">
        <field name="name">hr.loan.view.form</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <form string="Loan Request">
                <header>
                    <button name="action_compute_installment" type="object"
                            string="Compute Installment" class="oe_highlight"
                            invisible="state in ('approve','refuse')"/>
                    <button name="action_submit" type="object" string="Submit" invisible="state != 'draft'"
                            class="oe_highlight"/>
                    <button name="action_approve" type="object"
                            string="Approve" invisible="state != 'waiting_approval_1'"
                            class="oe_highlight"
                            groups="hr.group_hr_manager"/>
                    <button name="action_refuse" type="object" string="Refuse"
                            invisible="state not in ['draft','waiting_approval_1']"
                            class="oe_highlight"
                            groups="hr.group_hr_manager"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,waiting_approval_1,approve"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>

                    <!-- Auto Generated Loan Notice -->
                    <field name="is_auto_generated" invisible="1"/>
                    <div class="alert alert-info" role="alert" invisible="not is_auto_generated">
                        <strong>Khoản ứng tự động:</strong> Khoản ứng này được tạo tự động bởi
                        <field name="auto_config_id" readonly="1" class="oe_inline"/> vào ngày
                        <field name="create_date" readonly="1" widget="date" class="oe_inline"/>.
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group col="4">
                        <field name="employee_id" readonly="state == 'approve'"/>
                        <field name="date"/>
                        <field name="batch_id"
                               options="{'no_create': True, 'no_create_edit': True}"
                               readonly="is_auto_generated or state == 'approve'"
                               domain="[('state', 'in', ['draft', 'confirmed'])]"/>
                        <field name="department_id"/>
                        <field name="job_position"/>
                        <field name="loan_amount" readonly="state == 'approve'"/>
                        <field name="installment" readonly="state == 'approve'"/>
                        <field name="payment_date" readonly="state == 'approve'"/>
                        <field name="company_id" options="{'no_create': True}"
                               readonly="state != 'draft'"
                               groups="base.group_multi_company"/>
                        <field name="currency_id"
                               options="{'no_create': True}"/>
                    </group>

                    <!-- Auto generation info -->
                    <group invisible="not is_auto_generated">
                        <group string="Thông tin tự động">
                            <field name="auto_log_id" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Installments">
                            <field name="loan_lines">
                                <tree string="Installments" editable="bottom">
                                    <field name="date"/>
                                    <field name="amount"/>
                                    <field name="paid"/>
                                    <field name="payslip_id"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right"
                                   colspan="2">
                                <field name="total_amount" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="total_paid_amount"
                                       widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="balance_amount"
                                       class="oe_subtotal_footer_separator"
                                       widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <div class="oe_clear"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!--Search View of hr_loan model-->
    <record id="hr_loan_view_search" model="ir.ui.view">
        <field name="name">hr.loan.view.search</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <search string="Loan">
                <filter string="My Requests" name="myrequest"
                        domain="[('employee_id.user_id.id', '=', uid)]"/>
                <field name="employee_id" string="Employee"/>
                <field name="department_id" string="Department"/>
                <field name="batch_id" string="Đợt ứng lương"/>

                <separator/>
                <filter string="Nháp" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Chờ duyệt" name="waiting" domain="[('state', '=', 'waiting_approval_1')]"/>
                <filter string="Đã duyệt" name="approved" domain="[('state', '=', 'approve')]"/>
                <filter string="Từ chối" name="refused" domain="[('state', '=', 'refuse')]"/>
                <filter string="Đã hủy" name="cancelled" domain="[('state', '=', 'cancel')]"/>

                <separator/>
                <filter string="Tự động" name="auto_generated" domain="[('is_auto_generated', '=', True)]"/>
                <filter string="Thủ công" name="manual" domain="[('is_auto_generated', '=', False)]"/>

                <separator/>
                <filter string="Tháng hiện tại" name="current_month"
                    domain="[('date', '&gt;=', context_today().replace(day=1)), ('date', '&lt;', (context_today().replace(day=1) + relativedelta(months=1)))]"/>

                <group expand="1" string="Group By">
                    <filter string="Đợt ứng lương" name="group_batch" context="{'group_by':'batch_id'}"/>
                    <filter string="Employee" name="employee_id"
                            context="{'group_by':'employee_id'}"/>
                    <filter string="Department" name="department_id"
                            context="{'group_by':'department_id'}"/>
                    <filter string="Status" name="status"
                            context="{'group_by':'state'}"/>
                    <filter string="Tháng" name="group_month"
                            context="{'group_by':'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Loan Kanban View -->
    <record id="hr_loan_view_kanban" model="ir.ui.view">
        <field name="name">hr.loan.view.kanban</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="batch_id"/>
                <field name="loan_amount"/>
                <field name="state"/>
                <field name="balance_amount"/>
                <field name="is_auto_generated"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <span t-if="record.is_auto_generated.raw_value" class="badge badge-info">
                                            Tự động
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div><i class="fa fa-user"/> <field name="employee_id"/></div>
                                    <div t-if="record.batch_id.raw_value">
                                        <i class="fa fa-list"/> <field name="batch_id"/>
                                    </div>
                                    <div><i class="fa fa-money"/> <field name="loan_amount" widget="monetary"/></div>
                                    <div t-if="record.balance_amount.raw_value &gt; 0">
                                        <strong>Còn lại: <field name="balance_amount" widget="monetary"/></strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action for loan request-->
    <record id="hr_loan_action" model="ir.actions.act_window">
        <field name="name">Request for Loan</field>
        <field name="res_model">hr.loan</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_myrequest': 1}</field>
        <field name="search_view_id" ref="hr_loan_view_search"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Loan request.
            </p>
            <p>
                Use this menu to create loan requests.
            </p>
        </field>
    </record>

    <!-- Action for hr loan management -->
    <record id="act_hr_employee_loan_request" model="ir.actions.act_window">
        <field name="name">Loans</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.loan</field>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_myloan': 1}</field>
        <field name="view_id" eval="hr_loan_view_tree"/>
    </record>

    <!-- Actions cho Batch Operations -->

    <!-- Batch Submit Action -->
    <record id="action_batch_submit_loan" model="ir.actions.server">
        <field name="name">Gửi duyệt</field>
        <field name="model_id" ref="model_hr_loan"/>
        <field name="binding_model_id" ref="model_hr_loan"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
action = records.action_batch_submit()
        </field>
    </record>

    <!-- Batch Approve Action -->
    <record id="action_batch_approve_loan" model="ir.actions.server">
        <field name="name">Duyệt</field>
        <field name="model_id" ref="model_hr_loan"/>
        <field name="binding_model_id" ref="model_hr_loan"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="groups_id" eval="[(4, ref('hr.group_hr_manager'))]"/>
        <field name="code">
action = records.action_batch_approve()
        </field>
    </record>

    <!-- Batch Refuse Action -->
    <record id="action_batch_refuse_loan" model="ir.actions.server">
        <field name="name">Từ chối</field>
        <field name="model_id" ref="model_hr_loan"/>
        <field name="binding_model_id" ref="model_hr_loan"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="groups_id" eval="[(4, ref('hr.group_hr_manager'))]"/>
        <field name="code">
action = records.action_batch_refuse()
        </field>
    </record>

    <!-- Batch Cancel Action -->
    <record id="action_batch_cancel_loan" model="ir.actions.server">
        <field name="name">Tạm huỷ</field>
        <field name="model_id" ref="model_hr_loan"/>
        <field name="binding_model_id" ref="model_hr_loan"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
action = records.action_batch_cancel()
        </field>
    </record>

    <!-- Batch Reset to Draft Action -->
    <record id="action_batch_reset_draft_loan" model="ir.actions.server">
        <field name="name">Chuyển về nháp</field>
        <field name="model_id" ref="model_hr_loan"/>
        <field name="binding_model_id" ref="model_hr_loan"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="groups_id" eval="[(4, ref('hr.group_hr_manager'))]"/>
        <field name="code">
action = records.action_batch_reset_to_draft()
        </field>
    </record>

    <!--Loan Menus-->
    <menuitem id="hr_loan_menu_root" name="Loans &amp; Advances"
              parent="hr.menu_hr_root"
              sequence="20"/>
    <menuitem id="hr_loan_menu" name="Loan"
              parent="hr_loan_menu_root"
              sequence="1"/>
    <menuitem id="hr_loan_menu_requests"
              name="Request for Loan"
              parent="hr_loan_menu_root"
              action="hr_loan_action"/>
</odoo>