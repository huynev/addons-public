<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Driver Fields to Employee Form -->
    <record id="view_employee_form_driver_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form.driver.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='active_group']" position="after">
                <group string="Driver Information" name="driver_info">
                    <field name="is_driver"/>
                    <field name="driver_pin" password="True" invisible="is_driver == False"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
