<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Loan Batch Security Rules -->
        <record id="loan_batch_comp_rule" model="ir.rule">
            <field name="name">Loan Batch: Company Rule</field>
            <field name="model_id" ref="model_hr_loan_batch"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Loan Rules -->
        <record id="loan_emp_rule" model="ir.rule">
            <field name="name">Loan Request: Employee</field>
            <field name="model_id" ref="model_hr_loan"/>
            <field name="domain_force">[('employee_id.user_id.id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="loan_hr_rule" model="ir.rule">
            <field name="name">Loan Request: HR User</field>
            <field name="model_id" ref="model_hr_loan"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>

        <!-- Loan Line Rules -->
        <record id="loan_line_emp_rule" model="ir.rule">
            <field name="name">Loan Line: Employee</field>
            <field name="model_id" ref="model_hr_loan_line"/>
            <field name="domain_force">[('employee_id.user_id.id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="loan_line_hr_rule" model="ir.rule">
            <field name="name">Loan Line: HR User</field>
            <field name="model_id" ref="model_hr_loan_line"/>
            <field name="domain_force">[('loan_id.company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>

        <!-- Auto Config Rules -->
        <record id="loan_auto_config_comp_rule" model="ir.rule">
            <field name="name">Loan Auto Config: Company Rule</field>
            <field name="model_id" ref="model_hr_loan_auto_config"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>

        <!-- Auto Employee Line Rules -->
        <record id="loan_auto_employee_line_comp_rule" model="ir.rule">
            <field name="name">Loan Auto Employee Line: Company Rule</field>
            <field name="model_id" ref="model_hr_loan_auto_employee_line"/>
            <field name="domain_force">[('config_id.company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>

        <!-- Auto Log Rules -->
        <record id="loan_auto_log_comp_rule" model="ir.rule">
            <field name="name">Loan Auto Log: Company Rule</field>
            <field name="model_id" ref="model_hr_loan_auto_log"/>
            <field name="domain_force">[('config_id.company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>

    </data>
</odoo>