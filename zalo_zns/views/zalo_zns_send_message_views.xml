<odoo>
    <record id="view_zalo_zns_send_message_wizard_form" model="ir.ui.view">
        <field name="name">zalo.zns.send.message.wizard.form</field>
        <field name="model">zalo.zns.send.message.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="template_id"/>
                    <field name="recipient_phone"/>
                    <field name="model_id"/>
                    <field name="record_id"/>
                </group>
                <field name="key_value_ids">
                    <tree editable="bottom" create="false" delete="false">
                        <field name="key" readonly="1"/>
                        <field name="model_id" invisible="1"/>
                        <field name="field_id" readonly="1"/>
                        <field name="value" readonly="1"/>
                    </tree>
                </field>
                <footer>
                    <button name="action_send_message" string="Send" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>