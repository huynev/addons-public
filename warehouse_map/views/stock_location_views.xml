<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend form view của stock.quant -->
    <record id="view_stock_quant_form_inherit" model="ir.ui.view">
        <field name="name">stock.quant.form.inherit</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_id']" position="after">
                <group string="Vị trí trên sơ đồ kho" name="map_position" colspan="2">
                    <group>
                        <field name="posx"/>
                        <field name="posy"/>
                        <field name="posz"/>
                    </group>
                    <group>
                        <field name="display_on_map"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Extend tree view của stock.quant -->
    <record id="view_stock_quant_tree_inherit" model="ir.ui.view">
        <field name="name">stock.quant.tree.inherit</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_id']" position="after">
                <field name="posx" optional="hide"/>
                <field name="posy" optional="hide"/>
                <field name="posz" optional="hide"/>
                <field name="days_in_stock" optional="show" string="Ngày trong kho"/>
            </xpath>
        </field>
    </record>
</odoo>
