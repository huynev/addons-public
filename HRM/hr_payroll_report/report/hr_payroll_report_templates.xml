<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_payroll">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2 t-esc="docs.name" class="text-center"/>
                    
                    <div class="row mt32 mb32">
                        <div class="col-4">
                            <strong>Period:</strong>
                            <span t-field="docs.date_from"/> to <span t-field="docs.date_to"/>
                        </div>
                        <div class="col-4">
                            <strong>Report Type:</strong>
                            <span t-field="docs.report_type"/>
                        </div>
                        <div class="col-4">
                            <strong>Generated on:</strong>
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>
                        </div>
                    </div>
                    
                    <!-- Summary Report -->
                    <div t-if="not is_detailed">
                        <h3>Payroll Summary</h3>
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Employee</th>
                                    <th>Department</th>
                                    <th class="text-right">Gross Amount</th>
                                    <th class="text-right">Net Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="employee_data" t-as="data">
                                    <td>
                                        <span t-esc="data['employee'].name"/>
                                    </td>
                                    <td>
                                        <span t-esc="data['departments']"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="data['total_gross']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="data['total_net']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                    </td>
                                </tr>
                                <tr class="font-weight-bold">
                                    <td colspan="2">Total</td>
                                    <td class="text-right">
                                        <span t-esc="totals['gross']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="totals['net']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Detailed Report -->
                    <div t-if="is_detailed">
                        <t t-foreach="employee_data" t-as="data">
                            <div style="page-break-inside: avoid;" class="mt-4">
                                <h3><span t-esc="data['employee'].name"/></h3>
                                <div class="row">
                                    <div class="col-4">
                                        <strong>Department:</strong>
                                        <span t-esc="data['departments']"/>
                                    </div>
                                    <div class="col-8">
                                        <strong>Position:</strong>
                                        <span t-esc="data['employee'].job_id.name"/>
                                    </div>
                                </div>
                                
                                <t t-foreach="data['slips']" t-as="slip">
                                    <div class="mt-3">
                                        <h4>
                                            Payslip: <span t-field="slip.number"/> 
                                            (<span t-field="slip.date_from"/> to <span t-field="slip.date_to"/>)
                                        </h4>
                                        
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Code</th>
                                                    <th>Name</th>
                                                    <th class="text-right">Quantity</th>
                                                    <th class="text-right">Rate</th>
                                                    <th class="text-right">Amount</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="categories" t-as="category">
                                                    <t t-set="category_lines" t-value="slip.line_ids.filtered(lambda l: l.category_id == category)"/>
                                                    <t t-if="category_lines">
                                                        <tr class="table-active">
                                                            <td colspan="5"><strong t-field="category.name"/></td>
                                                        </tr>
                                                        <tr t-foreach="category_lines" t-as="line">
                                                            <td><span t-field="line.code"/></td>
                                                            <td><span t-field="line.name"/></td>
                                                            <td class="text-right"><span t-field="line.quantity"/></td>
                                                            <td class="text-right">
                                                                <span t-field="line.rate" t-options='{"widget": "percentage"}'/>
                                                            </td>
                                                            <td class="text-right">
                                                                <span t-field="line.total" t-options='{"widget": "monetary", "display_currency": slip.company_id.currency_id}'/>
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </t>
                                                <tr class="font-weight-bold">
                                                    <td colspan="4" class="text-right">Net</td>
                                                    <td class="text-right">
                                                        <span t-esc="slip.line_ids.filtered(lambda l: l.code == 'NET').total" 
                                                              t-options='{"widget": "monetary", "display_currency": slip.company_id.currency_id}'/>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </t>
                            </div>
                        </t>
                        
                        <!-- Summary at the end of detailed report -->
                        <div class="mt-4">
                            <h3>Period Summary</h3>
                            <table class="table table-sm table-bordered">
                                <tr>
                                    <td><strong>Total Payslips:</strong></td>
                                    <td><span t-esc="totals['count']"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Total Gross:</strong></td>
                                    <td><span t-esc="totals['gross']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/></td>
                                </tr>
                                <tr>
                                    <td><strong>Total Net:</strong></td>
                                    <td><span t-esc="totals['net']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
    
    <record id="action_report_hr_payroll" model="ir.actions.report">
        <field name="name">Payroll Report</field>
        <field name="model">hr.payroll.report.minhduc</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_payroll_report.report_payroll</field>
        <field name="report_file">hr_payroll_report.report_payroll</field>
        <field name="binding_model_id" ref="model_hr_payroll_report_minhduc"/>
        <field name="binding_type">report</field>
    </record>
</odoo>