<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Search View -->
    <record id="view_hr_payroll_report_search" model="ir.ui.view">
        <field name="name">hr.payroll.report.search</field>
        <field name="model">hr.payroll.report</field>
        <field name="arch" type="xml">
            <search string="Payroll Analysis">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Done" name="done" domain="[('state','=','done')]"/>
                <separator/>
                <filter string="Date" name="date" date="date_from"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Department" name="department" context="{'group_by': 'department_id'}"/>
                    <filter string="Job Position" name="job" context="{'group_by': 'job_id'}"/>
                    <filter string="Company" name="company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                    <filter string="Salary Structure" name="structure" context="{'group_by': 'struct_id'}"/>
                    <filter string="Status" name="status" context="{'group_by': 'state'}"/>
                    <filter string="Month" name="month" context="{'group_by': 'month'}"/>
                    <filter string="Year" name="year" context="{'group_by': 'year'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_hr_payroll_report_tree" model="ir.ui.view">
        <field name="name">hr.payroll.report.tree</field>
        <field name="model">hr.payroll.report</field>
        <field name="arch" type="xml">
            <tree string="Payroll Analysis" create="false">
                <field name="date_from"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="gross_amount" sum="Total Gross"/>
                <field name="allowance_amount" sum="Total Allowance"/>
                <field name="deduction_amount" sum="Total Deductions"/>
                <field name="overtime_amount" sum="Total Overtime"/>
                <field name="net_amount" sum="Total Net"/>
                <field name="worked_days" sum="Total Days"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_hr_payroll_report_pivot" model="ir.ui.view">
        <field name="name">hr.payroll.report.pivot</field>
        <field name="model">hr.payroll.report</field>
        <field name="arch" type="xml">
            <pivot string="Payroll Analysis" display_quantity="true">
                <field name="date_from" type="row" interval="month"/>
                <field name="employee_id" type="row"/>
                <field name="gross_amount" type="measure"/>
                <field name="allowance_amount" type="measure"/>
                <field name="deduction_amount" type="measure"/>
                <field name="overtime_amount" type="measure"/>
                <field name="net_amount" type="measure"/>
                <field name="worked_days" type="measure"/>
                <field name="worked_hours" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_hr_payroll_report_graph" model="ir.ui.view">
        <field name="name">hr.payroll.report.graph</field>
        <field name="model">hr.payroll.report</field>
        <field name="arch" type="xml">
            <graph string="Payroll Analysis" type="bar">
                <field name="employee_id"/>
                <field name="net_amount" type="measure"/>
                <field name="allowance_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hr_payroll_report" model="ir.actions.act_window">
        <field name="name">Payroll Analysis</field>
        <field name="res_model">hr.payroll.report</field>
        <field name="view_mode">pivot,graph,tree</field>
        <field name="search_view_id" ref="view_hr_payroll_report_search"/>
        <field name="context">{'search_default_year':1,'search_default_month':1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data yet!
            </p>
            <p>
                This report performs analysis on your payroll.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_hr_payroll_report"
        name="Payroll Analysis"
        parent="hr_bank_payroll_report.payroll_menu_report"
        action="action_hr_payroll_report"
        sequence="15"/>
</odoo>